pipeline {
    agent any

    environment {
        IMAGE_NAME = "running_image"
        CONTAINER_NAME = "running_container"
    }

    stages{

        stage('check_out'){
            steps{
                git branch: 'main',
                    url: 'https://github.com/BALASUBRAMANI619/RUNNING-PLAN-APP.git'
            }
        }

        stage('build_image'){
            steps{
                sh '''
                    docker build -t $IMAGE_NAME .
                '''
            }
        }

        stage('remove_old_container'){
            steps{
                sh ''' docker rm -f $CONTAINER_NAME || true
                '''
            }
        }

        stage('run_container'){
            environment {
                FLASK_SECRET_KEY = credentials('FLASK_SECRET_KEY')
                MYSQL_HOST       = credentials('MYSQL_HOST')
                MYSQL_USER       = credentials('MYSQL_USER')
                MYSQL_PASSWORD   = credentials('MYSQL_PASSWORD')
                MYSQL_DB         = credentials('MYSQL_DB')
                
            }
            steps{
                sh ''' docker run -d -p 5000:5000 \
                    --name $CONTAINER_NAME
                    -e FLASK_SECRET_KEY=$FLASK_SECRET_KEY \
                    -e MYSQL_HOST=$MYSQL_HOST \
                    -e MYSQL_USER=$MYSQL_USER \
                    -e MYSQL_PASSWORD=$MYSQL_PASSWORD \
                    -e MYSQL_DB=$MYSQL_DB \
                 $IMAGE_NAME
                '''
            }
        }
    }
    post {
        success{
            echo " ✅ Deployment successful"
        }
        failure{
            echo "❌ Deployment failed"
        }
    }
}